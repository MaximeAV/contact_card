{{ form_start(form) }}

<div class="m-2">

    <div class="d-flex flex-column mb-2">
        {{ form_label(form.lastname, 'Nom') }}
        {{ form_widget(form.lastname) }}
    </div>

    <div class="d-flex flex-column mb-2">
        {{ form_label(form.firstname, 'Prénom') }}
        {{ form_widget(form.firstname) }}
    </div>

    <div class="d-flex flex-column mb-2">
        {{ form_label(form.mail, 'Mail') }}
        {{ form_widget(form.mail) }}
    </div>

    <div class="d-flex flex-column mb-2">
        {{ form_label(form.message, 'Message') }}
        {{ form_widget(form.message) }}
    </div>
    
    <div class="d-flex flex-column mb-2">
        {{ form_label(form.department, 'Département') }}
        {{ form_widget(form.department) }}
    </div>

</div>

<div class="d-flex justify-content-between mt-4">
    <a class="btn btn-secondary" href="/">{{ button_label|default('Annuler') }}</a>
    <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
</div>

{{ form_end(form) }}
